<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/corso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aula_LezioneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aula Lezione : "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/inizioLezione_LezioneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orario di Inizio Lezione : "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/fineLezione_LezioneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orario di Fine Lezione  : "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tipo_LezioneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo Lezione : "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/giorno_LezioneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giorno : "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>